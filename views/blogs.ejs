    <head>
        <link rel="stylesheet" href="/blog.css">
    </head>

    <div>



        <div class="container p-5">
            <div class="row">


                <%
         for(var i= (blogs.length-1); i>=0; i--){ %>
                    <% if (blogs[i].type=="Blog") {%>
                        <div class="col-12 col-sm-8 col-md-6 col-lg-4">



                            <div class="card m-3">
                                <img class="card-img" src="<%=blogs[i].imageurl %>" alt="Bologna">
                                <!-- <div class="card">
              <a href="#" class="btn btn-light btn-sm"><%= blogs[i].type %></a>
            </div> -->


                                <div class="card-body">
                                    <h4 class="card-title">
                                        <%= blogs[i].title %>
                                    </h4>
