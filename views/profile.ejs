<%- include('./header') %>

    <head>
        <link rel="stylesheet" href="/blog.css">
    </head>

    <div>



        <div class="container p-5">
            <div class="row">


                <%
         for(var i= (posts.length-1); i>=0; i--){ %>
                    <% if (posts[i]) {%>
                        <div class="col-12 col-sm-8 col-md-6 col-lg-4">



                            <div class="card m-3">
                                <img class="card-img" src="posts[i].imageurl" alt="Bologna">
                                <div class="card-img-top">
                                    <a class="btn btn-light btn-sm">
                                        <%= posts[i].type %>
                                    </a>
                                </div>

                                <div class="card-body">
                                    <h4 class="card-title">
                                        <%= posts[i].title %>
                                    </h4>
                                    <!-- <small class="text-muted cat">
                <i class="far fa-clock text-info"></i> 30 minutes
              </small> -->

                                    <% if(posts[i].content.length>25){%>
                                        <%    str1=posts[i].content;%>
                                            <%     str1=str1.substring(0,100);%>
                                                <p class="card-text">
                                                    <%= str1 %> . . . </p>
                                                <% } else{%>
                                                    <%     str1=posts[i].content; %>
                                                        <p class="card-text">
                                                            <%= str1 %>
                                                        </p>
                                                        <% }%>
                                                            <% if(posts[i].type == "Notice") { %>
                                                                <a href="/singlenotice/<%= posts[i]._id %>" class="btn btn-info">Read More</a>
                                                                <% } else { %>
                                                                    <a href="/singleblog/<%= posts[i]._id %>" class="btn btn-info">Read More</a>
                                                                    <% } %>
                                </div>
                                <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">
                                    <!-- <div class="views">Apr 1, 12:45PM
              </div> -->
                                    <% if(posts[i].type != "Notice") { %>
                                        <div class="stats">

                                            <i class="fa"></i> ❤️
                                            <%= posts[i].votesCount %>
                                        </div>
                                        <% } %>
                                            <!-- <div class="row h-100">
                                        <div class="col" style="text-align: center; border-right: 1px solid grey;">UPVOTE</div>
                                        <div class="col" style="text-align: center;">DOWNVOTE</div>
                                    </div> -->
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% } %>
            </div>

        </div>
    </div>
    <%- include('./footer') %>
        </body>

        </html>